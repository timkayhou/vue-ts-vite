{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "perf",
        "feat",
        "fix",
        "refactor",
        "docs",
        "chore",
        "style",
        "revert",
        "test"
      ]
    ],
    "type-case": [
      0,
      "always",
      "lower-case"
    ],
    "type-empty": [
      0,
      "never"
    ],
    "scope-empty": [
      0,
      "never"
    ],
    "scope-case": [
      0,
      "always",
      "lower-case"
    ],
    "subject-full-stop": [
      0,
      "never",
      [
        "."
      ]
    ],
    "subject-case": [
      0,
      "never",
      "sentence-case"
    ],
    "header-max-length": [
      0,
      "always",
      72
    ]
  }
}
